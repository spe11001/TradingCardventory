@model TradingCardventory.Models.User

@{
    ViewData["Title"] = "Create";
}

@if (ViewBag.MyErrorMessage != null)
{
    <script>alert("@ViewBag.MyErrorMessage");</script>
}

<h2>Create your username!</h2>

<hr />
@if (ViewBag.UserCreationSuccess != null)
{
    <h4>@ViewBag.UserCreationSuccess</h4>
}
@using (Html.BeginForm("Create", "Users", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="control-label">User Name</label>
                    <input name="UserName" class="form-control" value="@Model.UserName" />
                    @Html.ValidationMessageFor(a => a.UserName)
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <div>
                        @Html.Password("password", Model.Password, new { id = "password", Textmode = "Password" })
                    </div>
                    @Html.ValidationMessageFor(a => a.Password)
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
        </div>
    </div>
<div>
    @Html.ActionLink("Back to login page", "Login", "")
</div>
}